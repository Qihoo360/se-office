    text-transform: uppercase;
}

button:disabled, button[disabled]{
    cursor: default;
}

.button.gray {
    color: #AAAAAA;
    background: #444444;
}


.button.orange {
    color: #FFFFFF;
    border: 1px solid #FF6F3D;
    background: #FF6F3D;
